{
  "name": "ppp-nest",
  "version": "0.0.3",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \\\"src/**/*.ts\\\" \\\"test/**/*.ts\\\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "nest build && node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "commit": "git-cz",
    "deploy:heroku": "chmod +x ./deployHeroku.sh && sudo ./deployHeroku.sh",
    "docs": "typedoc --options typedoc.json"
  },
  "dependencies": {
    "@nestjs/common": "8.0.6",
    "@nestjs/config": "1.0.1",
    "@nestjs/core": "8.0.6",
    "@nestjs/jwt": "8.0.0",
    "@nestjs/mongoose": "8.0.1",
    "@nestjs/passport": "8.0.1",
    "@nestjs/platform-express": "8.0.6",
    "@nestjs/swagger": "5.0.9",
    "@nestjs/testing": "8.0.6",
    "@types/mongoose": "5.11.97",
    "@types/passport-jwt": "3.0.6",
    "@types/passport-local": "1.0.34",
    "bcrypt": "5.0.1",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "express": "4.17.1",
    "husky": "7.0.1",
    "ioredis": "4.27.7",
    "jsonapi-serializer": "3.6.7",
    "lodash": "4.17.21",
    "module-alias": "2.2.2",
    "mongodb": "4.1.0",
    "mongoose": "5.13.7",
    "nest-router": "1.0.9",
    "nestjs-redis": "git+https://github.com/GyanendroKh/nestjs-redis.git#nest8-fix",
    "open": "8.2.1",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.3.0",
    "swagger-ui-express": "4.1.6"
  },
  "devDependencies": {
    "@nestjs/cli": "8.1.1",
    "@nestjs/schematics": "8.0.2",
    "@types/bcrypt": "3.0.0",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.1",
    "@types/jsonapi-serializer": "3.6.4",
    "@types/lodash": "4.14.168",
    "@types/node": "16.6.1",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.0",
    "jest": "27.0.6",
    "prettier": "2.3.2",
    "supertest": "6.1.5",
    "ts-jest": "27.0.5",
    "ts-loader": "9.2.5",
    "ts-node": "10.2.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.3.5"
  },
  "jest": {
    "moduleNameMapper": {
      "^@shared(.*)$": "<rootDir>/components/shared$1",
      "^@components(.*)$": "<rootDir>/components$1",
      "^@filters(.*)$": "<rootDir>/filters$1",
      "^@guards(.*)$": "<rootDir>/guards$1",
      "^@interfaces(.*)$": "<rootDir>/interfaces$1",
      "^@pipes(.*)$": "<rootDir>/pipes$1",
      "^@dto(.*)$": "<rootDir>/dto$1",
      "^@responses(.*)$": "<rootDir>/responses$1",
      "^@interceptors(.*)$": "<rootDir>/interceptors$1",
      "^@decorators(.*)$": "<rootDir>/decorators$1",
      "^@v1(.*)$": "<rootDir>/src/routes/v1$1",
      "^@exceptions(.*)$": "<rootDir>/src/exceptions/v1$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "_moduleAliases": {
    "@shared": "./dist/components/shared",
    "@components": "./dist/components",
    "@filters": "./dist/filters",
    "@guards": "./dist/guards",
    "@interfaces": "./dist/interfaces",
    "@pipes": "./dist/pipes",
    "@dto": "./dist/dto",
    "@responses": "./dist/responses",
    "@interceptors": "./dist/interceptors",
    "@decorators": "./dist/decorators",
    "@utils": "./dist/utils"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  }
}
